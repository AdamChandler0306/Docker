version: '3'

services:
  sonarr:
    image: linuxserver/sonarr:latest
    container_name: sonarr
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=America/Chicago
    volumes:
      - /data/Sync/docker/sonarr:/config
      - /data/Media/Plex/Shows:/tv
      - /data/Media/transmission/downloads:/downloads
    ports:
      - 91:8989
    restart: unless-stopped